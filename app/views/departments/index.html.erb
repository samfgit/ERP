<div class="container">
  <div class="row">
    <h3>Departments</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Department Name</th>
            <th>Company Code</th>
            <th>Parent Department</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <%= render department %>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

<%= link_to 'New Department', new_department_path, :class => 'btn btn-success' %>
