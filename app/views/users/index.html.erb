<div class="container">
  <div class="row">
    <h3>Users</h3>
      <table class="table">
        <thead>
          <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Role</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>

    <%= link_to 'Create New User', new_user_path, :class => 'btn btn-success' %>
  </div>
</div>