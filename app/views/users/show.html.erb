<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p>Role: <%= @user.role if @user.role %></p>
<% if @user == current_user %>
	<p><%= link_to 'Edit my account', edit_user_registration_path, :class => 'btn btn-primary' %></p>
<% elsif current_user.admin? %>
	<p><%= link_to 'Edit account', edit_user_path(@user), :class => 'btn btn-primary' %></p>
<% end %>